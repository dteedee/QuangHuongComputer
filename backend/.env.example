# ===========================================
# Quang Huong Computer - Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!
# ===========================================

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development

# ===========================================
# DATABASE
# ===========================================
DB_PASSWORD=your_postgres_password_here
# Full connection string (alternative to individual settings)
# ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=quanghuongdb;Username=postgres;Password=xxx

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_PASSWORD=your_redis_password_here
# Redis__ConnectionString=localhost:6379,password=xxx

# ===========================================
# RABBITMQ
# ===========================================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
# ConnectionStrings__RabbitMQ=amqp://guest:guest@localhost:5672

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Must be at least 32 characters for security
JWT_SECRET_KEY=your_super_secret_jwt_key_at_least_32_characters_long

# ===========================================
# OAUTH PROVIDERS
# ===========================================
# Google OAuth (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth (https://developers.facebook.com)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# VNPay (https://sandbox.vnpayment.vn)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret

# Momo (https://business.momo.vn)
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key

# ZaloPay (https://zalopay.vn)
ZALOPAY_APP_ID=your_zalopay_app_id
ZALOPAY_KEY1=your_zalopay_key1
ZALOPAY_KEY2=your_zalopay_key2

# ===========================================
# EMAIL (SMTP)
# ===========================================
# For Gmail, use App Password: https://myaccount.google.com/apppasswords
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com

# ===========================================
# SMS (TWILIO)
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# CLOUD STORAGE
# ===========================================
# Cloudinary (https://cloudinary.com)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ===========================================
# AI SERVICES
# ===========================================
# OpenAI (https://platform.openai.com)
OPENAI_API_KEY=sk-your_openai_api_key

# Google Gemini (https://makersuite.google.com)
GEMINI_API_KEY=your_gemini_api_key
