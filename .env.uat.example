# ===========================================
# Quang Huong Computer - UAT Environment Variables
# ===========================================
# Copy this file to .env.uat and fill in your values
# Usage: docker-compose -f docker-compose.uat.yml --env-file .env.uat up -d
# ===========================================

# ================================
# PostgreSQL (UAT)
# ================================
POSTGRES_DB=quanghuongdb_uat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_uat_postgres_password
POSTGRES_PORT=5434

# ================================
# Redis (UAT)
# ================================
REDIS_PASSWORD=your_secure_uat_redis_password
REDIS_PORT=6381

# ================================
# RabbitMQ (UAT)
# ================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_secure_uat_rabbitmq_password
RABBITMQ_PORT=5674
RABBITMQ_MANAGEMENT_PORT=15674

# ================================
# JWT Authentication
# ================================
JWT_SECRET_KEY=your_uat_jwt_secret_key_at_least_32_characters_long

# ================================
# OAuth (Use sandbox/test credentials)
# ================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ================================
# Payment Gateways (Sandbox)
# ================================
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_RETURN_URL=http://localhost:3002/payment/vnpay-return

MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key

# ================================
# Email (SMTP)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com

# ================================
# Cloud Storage
# ================================
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=your_cloud_name

# ================================
# AI Services
# ================================
GEMINI_API_KEY=your_gemini_api_key

# ================================
# Backend API (UAT)
# ================================
BACKEND_PORT=5002
VITE_API_URL=http://localhost:5002

# ================================
# Frontend (UAT)
# ================================
FRONTEND_PORT=3002
UAT_DOMAIN=http://uat.quanghuongcomputer.local

# ================================
# Monitoring - Prometheus
# ================================
PROMETHEUS_PORT=9090

# ================================
# Monitoring - Grafana
# ================================
GRAFANA_PORT=3003
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_ROOT_URL=http://localhost:3003

# ================================
# Monitoring - Loki
# ================================
LOKI_PORT=3100

# ================================
# Database Admin - PgAdmin
# ================================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@quanghuongcomputer.local
PGADMIN_PASSWORD=your_secure_pgadmin_password

# ================================
# Nginx Proxy (Optional)
# ================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
