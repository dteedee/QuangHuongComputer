# ================================
# API Configuration
# ================================
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# ================================
# OAuth & Social Login
# ================================
# Google OAuth - Get from: https://console.cloud.google.com/
VITE_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE

# Facebook OAuth - Get from: https://developers.facebook.com/
VITE_FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID_HERE

# ================================
# Payment Gateways
# ================================
# VNPay - Vietnam payment gateway
# Register at: https://vnpay.vn/
VITE_VNPAY_RETURN_URL=http://localhost:5173/payment/vnpay-return

# Momo - Vietnam e-wallet
# Register at: https://business.momo.vn/
VITE_MOMO_RETURN_URL=http://localhost:5173/payment/momo-return

# ZaloPay - Vietnam payment gateway
# Register at: https://zalopay.vn/
VITE_ZALOPAY_RETURN_URL=http://localhost:5173/payment/zalopay-return

# ================================
# Real-time Communication
# ================================
# SignalR Hub URL for chat
VITE_SIGNALR_HUB_URL=http://localhost:5000/hubs/chat

# Socket.io (alternative)
VITE_SOCKET_URL=http://localhost:5000

# ================================
# Third-party Services
# ================================
# Google Maps API - Get from: https://console.cloud.google.com/
VITE_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# Google Analytics - Get from: https://analytics.google.com/
VITE_GA_TRACKING_ID=YOUR_GA_TRACKING_ID

# Facebook Pixel - Get from: https://business.facebook.com/
VITE_FB_PIXEL_ID=YOUR_FB_PIXEL_ID

# ================================
# Feature Flags
# ================================
VITE_ENABLE_CHAT=true
VITE_ENABLE_AI_CHATBOT=true
VITE_ENABLE_PAYMENT=true
VITE_ENABLE_SOCIAL_LOGIN=true

# ================================
# Environment
# ================================
VITE_NODE_ENV=development
VITE_APP_NAME=Quang Hương Computer
VITE_APP_VERSION=1.0.0

# ================================
# CDN & Assets
# ================================
VITE_CDN_URL=
# Cloudinary - Get from: https://cloudinary.com/
VITE_CLOUDINARY_CLOUD_NAME=YOUR_CLOUDINARY_CLOUD_NAME
