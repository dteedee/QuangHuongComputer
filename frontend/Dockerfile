# Build Stage
FROM node:20-alpine AS build
WORKDIR /app

# Define build arguments
ARG VITE_API_URL
ARG VITE_NODE_ENV=production
ARG VITE_GOOGLE_CLIENT_ID
ARG VITE_FACEBOOK_APP_ID
ARG VITE_CLOUDINARY_CLOUD_NAME
ARG VITE_VNPAY_RETURN_URL
ARG VITE_MOMO_RETURN_URL
ARG VITE_ZALOPAY_RETURN_URL
ARG VITE_SIGNALR_HUB_URL
ARG VITE_SOCKET_URL

# Set environment variables for Vite build
ENV VITE_API_URL=$VITE_API_URL
ENV VITE_NODE_ENV=$VITE_NODE_ENV
ENV VITE_GOOGLE_CLIENT_ID=$VITE_GOOGLE_CLIENT_ID
ENV VITE_FACEBOOK_APP_ID=$VITE_FACEBOOK_APP_ID
ENV VITE_CLOUDINARY_CLOUD_NAME=$VITE_CLOUDINARY_CLOUD_NAME
ENV VITE_VNPAY_RETURN_URL=$VITE_VNPAY_RETURN_URL
ENV VITE_MOMO_RETURN_URL=$VITE_MOMO_RETURN_URL
ENV VITE_ZALOPAY_RETURN_URL=$VITE_ZALOPAY_RETURN_URL
ENV VITE_SIGNALR_HUB_URL=$VITE_SIGNALR_HUB_URL
ENV VITE_SOCKET_URL=$VITE_SOCKET_URL

COPY package*.json ./
RUN npm ci --prefer-offline --no-audit
COPY . .
RUN npm run build

# Production Stage
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
